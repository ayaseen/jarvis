# JARVIS Environment Configuration
# BALANCED FOR RTX 4070 Ti (12GB VRAM)

# User and Group IDs
PUID=1000
PGID=1002
TZ=Asia/Riyadh

# GPU Configuration
CUDA_VISIBLE_DEVICES=0
NVIDIA_VISIBLE_DEVICES=all
NVIDIA_DRIVER_CAPABILITIES=compute,utility

# vLLM Configuration (50% GPU = 6GB)
VLLM_MODEL=TheBloke/Mistral-7B-Instruct-v0.2-AWQ
VLLM_MAX_MODEL_LEN=2048
VLLM_GPU_MEMORY=0.5  # 50% of GPU for vLLM
VLLM_QUANTIZATION=awq
VLLM_API_KEY=jarvis-key-123
HUGGING_FACE_TOKEN=

# Embedding Model (GPU accelerated)
EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2
EMBEDDING_USE_GPU=true  # Use GPU for faster embeddings

# Voice Models (GPU accelerated)
WHISPER_MODEL=base.en  # Using base instead of tiny for better quality
TTS_MODEL=tts_models/en/ljspeech/tacotron2-DDC
VOICE_FORCE_CPU=false  # Use GPU for voice

# Database Configuration
POSTGRES_DB=jarvis
POSTGRES_USER=jarvis
POSTGRES_PASSWORD=jarvis123

# Milvus Configuration (CPU only)
MILVUS_HOST=milvus
MILVUS_PORT=19530

# MinIO Configuration (for Milvus)
MINIO_ACCESS_KEY=minioadmin
MINIO_SECRET_KEY=minioadmin

# Monitoring
GRAFANA_PASSWORD=admin

# Memory Limits
MAX_WORKERS=2
WORKER_TIMEOUT=120
